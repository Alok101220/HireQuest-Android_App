<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.UserProfileFragment"
    style="@style/AppBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_profile_appbar_container"
        android:visibility="visible"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:id="@+id/user_profile_appbar_backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_back"
            style="@style/IconTint"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/profile_shareBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_share"
                style="@style/IconTint"/>

            <ImageView
                android:id="@+id/profile_settingBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_setting"
                android:visibility="visible"
                style="@style/IconTint"/>
        </LinearLayout>



    </RelativeLayout>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/user_profile_appbar_container">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.cardview.widget.CardView
           android:id="@+id/profile_personal_cardView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginStart="20dp"
           android:layout_marginTop="20dp"
           android:layout_marginEnd="20dp"
           android:layout_marginBottom="20dp"
           android:outlineAmbientShadowColor="@color/base_color"
           android:outlineSpotShadowColor="@color/base_color"
           app:cardCornerRadius="16dp"
           app:cardElevation="15dp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/AppBar"
               android:orientation="horizontal"
               android:padding="16dp">

               <com.google.android.material.imageview.ShapeableImageView
                   android:id="@+id/profile_user_profile_img"
                   android:layout_width="70dp"
                   android:layout_height="70dp"
                   android:layout_alignParentStart="true"
                   android:src="@drawable/img"
                   app:shapeAppearanceOverlay="@style/circle" />

               <LinearLayout
                   android:id="@+id/profile_user_info_container"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_marginStart="10dp"
                   android:layout_toEndOf="@id/profile_user_profile_img"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/profile_user_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Alok Singh"
                       style="@style/Text"
                       android:textSize="16sp"
                       android:textStyle="bold" />

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_marginTop="4dp"
                       android:orientation="vertical">

                       <TextView
                           android:id="@+id/profile_user_currentOccupation"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Android developer - HireQuest"
                           style="@style/Text"
                           android:textSize="12sp" />

                       <TextView
                           android:id="@+id/profile_user_headline"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="3dp"
                           android:text="Html | CSS | React | Node.js"
                           style="@style/Text"
                           android:textSize="12sp" />
                   </LinearLayout>
               </LinearLayout>

               <ImageView
                   android:id="@+id/profile_personal_info_edit"
                   android:layout_width="26dp"
                   android:layout_height="26dp"
                   style="@style/IconBackground"
                   android:layout_alignParentEnd="true"
                   android:padding="5dp"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/icon_edit" />

               <ImageView
                   android:id="@+id/profile_send_chat_request"
                   android:layout_width="26dp"
                   android:layout_height="26dp"
                   android:layout_alignParentEnd="true"
                   style="@style/IconBackground"
                   android:padding="2dp"
                   android:src="@drawable/icon_add"
                   android:layout_below="@id/profile_personal_info_edit"
                   android:layout_marginTop="10dp"
                   />


           </RelativeLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/profile_user_experience_container"
           android:layout_below="@+id/profile_user_about_me_container"
           app:cardCornerRadius="16dp"
           app:cardElevation="10dp"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:outlineAmbientShadowColor="@color/base_color"
           android:outlineSpotShadowColor="@color/base_color"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/AppBar"
               android:gravity="center_vertical"
               android:paddingTop="25dp"
               android:paddingBottom="25dp"
               android:paddingStart="20dp"
               android:paddingEnd="20dp"
               >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/profile_user_experience_header"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true">
                   <ImageView
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:id="@+id/profile_user_experience_icon"
                       android:src="@drawable/icon_work_experience"
                       android:layout_alignParentStart="true"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/profile_user_experience_text"
                       android:layout_toEndOf="@+id/profile_user_experience_icon"
                       android:text="Work experience"
                       android:textStyle="bold"
                       android:textSize="14dp"
                       style="@style/Text"
                       android:layout_marginStart="10dp"/>
                   <ImageView
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:id="@+id/profile_user_experience_add_more_icon"
                       android:layout_alignParentEnd="true"
                       android:src="@drawable/icon_add_more"/>

               </RelativeLayout>

                   <androidx.recyclerview.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/profile_user_experience_recyclerView"
                       android:layout_marginTop="15dp"
                       android:visibility="gone"
                       android:layout_below="@+id/profile_user_experience_header"/>

           </RelativeLayout>

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/profile_user_education_container"
           android:layout_below="@+id/profile_user_experience_container"

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/profile_user_profile_container"
           android:layout_below="@+id/profile_user_appreciation_container"
           app:cardCornerRadius="16dp"
           app:cardElevation="10dp"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="20dp"
           android:outlineAmbientShadowColor="@color/base_color"
           android:outlineSpotShadowColor="@color/base_color"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:gravity="center_vertical"
               android:paddingTop="25dp"

               android:paddingEnd="20dp"
               >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/profile_user_skill_header">
                   <ImageView
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:id="@+id/profile_user_skill_icon"
                       android:src="@drawable/icon_skill"
                       android:layout_alignParentStart="true"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/profile_user_skill_text"
                       android:layout_toEndOf="@+id/profile_user_skill_icon"
                       android:text="Skill"
                       android:textStyle="bold"
                       android:textSize="14dp"
                       style="@style/Text"
                       android:layout_marginStart="10dp"/>
                   <ImageView
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:id="@+id/profile_user_skill_add_more_icon"
                       android:layout_alignParentEnd="true"
                       android:src="@drawable/icon_add_more"/>
               </RelativeLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:id="@+id/skill_breaker_line"
                   android:background="@color/text"
                   android:layout_alignParentStart="true"
                   android:layout_marginBottom="10dp"
                   android:alpha="0.5"
                   android:layout_marginTop="15dp"
                   android:visibility="gone"
                   android:layout_below="@+id/profile_user_skill_header"

                   />

                   <androidx.recyclerview.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/profile_user_skill_recyclerView"
                       android:layout_marginTop="15dp"
                       android:visibility="gone"
                       android:layout_below="@+id/skill_breaker_line"
                       />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/profile_user_skill_see_more"
                   android:layout_below="@+id/profile_user_skill_recyclerView"
                   android:text="See more"
                   android:textSize="12sp"
                   android:layout_centerHorizontal="true"
                   android:textColor="@color/base_color"
                   android:layout_marginTop="5dp"
                   android:visibility="gone"/>



           </RelativeLayout>

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/profile_user_about_me_container"
           android:layout_below="@+id/profile_personal_cardView"
           app:cardCornerRadius="16dp"
           app:cardElevation="10dp"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:outlineAmbientShadowColor="@color/base_color"
           android:outlineSpotShadowColor="@color/base_color"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/AppBar"
               android:gravity="center_vertical"
               android:paddingTop="25dp"
               android:paddingBottom="25dp"
               android:paddingStart="20dp"
               android:paddingEnd="20dp"
               android:layout_gravity="center_vertical"
               >

               <RelativeLayout
                   android:id="@+id/profile_user_about_me_header"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true">

                   <ImageView
                       android:id="@+id/profile_user_about_me_icon"
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:layout_alignParentStart="true"
                       android:src="@drawable/icon_about_me" />

                   <TextView
                       android:id="@+id/profile_user_about_me_text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_toEndOf="@+id/profile_user_about_me_icon"
                       android:text="About me"
                       style="@style/Text"
                       android:textSize="14dp"
                       android:textStyle="bold" />

                   <ImageView
                       android:id="@+id/profile_user_about_me_add_more_icon"
                       android:layout_width="19dp"
                       android:layout_height="19dp"
                       android:layout_alignParentEnd="true"
                       android:src="@drawable/icon_add_more" />
               </RelativeLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/profile_user_about_me_content_container"
                   android:layout_below="@+id/profile_user_about_me_header"
                   android:visibility="gone"
                   android:layout_marginTop="20dp"
                   android:orientation="vertical"
                   >
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/breakLine"
                       android:layout_alignParentTop="true"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/profile_user_about_me"
                       android:text=""
                       android:layout_marginTop="15dp"
                       android:textColor="@color/text"
                       android:textSize="14sp"/>
               </LinearLayout>

           </RelativeLayout>


       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/profile_user_certificate_container"

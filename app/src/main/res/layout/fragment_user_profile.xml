                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_user_project_header">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/profile_user_project_icon"
                    android:src="@drawable/icon_project"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_user_project_text"
                    android:layout_toEndOf="@+id/profile_user_project_icon"
                    android:text="Project"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    style="@style/Text"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/profile_user_project_add_more_icon"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_add_more"/>
            </RelativeLayout>

                   <androidx.recyclerview.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/profile_user_project_recyclerView"
                       android:layout_marginTop="15dp"
                       android:visibility="gone"
                       android:layout_below="@+id/profile_user_project_header"/>

           </RelativeLayout>

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
